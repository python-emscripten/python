 		;;
 	-qnx*)
--- a/configure	2020-02-24 22:36:25.000000000 +0100
+++ b/configure	2020-05-08 12:41:34.048250804 +0200
@@ -3274,6 +3274,9 @@
 	*-*-vxworks*)
 	    ac_sys_system=VxWorks
 	    ;;
+	*-*-emscripten)
+		ac_sys_system=Emscripten
+		;;
 	*)
 		# for now, limit cross builds to known configurations
 		MACHDEP="unknown"
@@ -3324,6 +3327,9 @@
 	*-*-vxworks*)
 		_host_cpu=$host_cpu
 		;;
+	*-*-emscripten)
+		ac_sys_system=Emscripten
+		;;
 	*)
 		# for now, limit cross builds to known configurations
 		MACHDEP="unknown"
